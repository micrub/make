

somevar = anything after "=" is considered the value till the end of the line

OUT_FLAGS = output.js


build: build-js build-css
  echo Build done

build-js: a.js b.js
  cat a.min.js b.min.js > $OUT_FLAGS
  echo JS file built

build-css:
  cat a.css b.css > style.css
  echo CSS built

a.js:
  echo "Minify a.js"
  uglifyjs a.js -o a.min.js

b.js:
  echo "Minify b.js"
  uglifyjs b.js -o b.min.js

all: build
